<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= roomName %> | TellMe</title>
    <script src="/js/main.js"></script>
    <script>
        const roomName = "<%= roomName %>"
    </script>
    <link rel="stylesheet" href="/css/tellme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/chat.js"></script>
</head>
<body>
    <main class="page">
        <%- include('components/side-bar.ejs', {rooms: rooms}); -%>
        <section class="room-chat-container">
            <div id="message-container">
                <% messages.forEach(message => { %>
                    <div class="message-user <%= user._id.equals(message.user) ? 'me' : '' %>">
                        <div class="user <%= user._id.equals(message.user) ? 'me' : '' %>">
                            <span><%= message.userName %></span>
                        </div>
                        <div class="message  <%= user._id.equals(message.user) ? 'me' : '' %>">
                            <span><%= message.message %></span>
                        </div>
                    </div>
                <% }) %>

            </div>
            <form id="send-container">
                <label for="message-input" hidden>Message</label>
                <input name="message" type="text" id="message-input">
                <button type="submit" id="send-button">Send</button>
            </form>
        </section>
    </main>
</body>
</html>