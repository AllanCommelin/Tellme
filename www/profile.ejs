<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/tellme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <title>Profil | TellMe</title>
    <script src="./js/main.js"></script>
</head>
<body>
<% if(typeof notif != 'undefined') {%>
    <div class="alert-notif --<%= notif.type %>" id="notif-${roomId}">
        <span><%= notif.message %></span>
    </div>
<% } %>
<main class="page">
    <%- include('components/side-bar.ejs', {rooms: rooms, open: true, me: me}); -%>
    <section>
        <h3>Modifier mes informations !</h3>
        <form id="user-form" class="room-form" action="/user" method="POST">
            <div class="field">
                <label for="email"><i class="fas fa-envelope"></i></label>
                <input id="email" name="email" type="text" value="<%= me.email %>" required placeholder="Email">
            </div>
            <div class="field">
                <label for="pseudo"><i class="fas fa-user"></i></label>
                <input id="pseudo" name="pseudo" type="text" value="<%= me.pseudo %>" required placeholder="Pseudo">
            </div>
            <label for="id" hidden></label>
            <input id="id" name="_id" type="text" value="<%= me._id %>" hidden>
            <button type="submit">Sauvegarder</button>
        </form>
    </section>
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js"></script>
<script src="./js/chat.js"></script>
</body>
</html>